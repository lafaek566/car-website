<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Daftar Mobil</title>
    <link rel="stylesheet" href="/style.css" />
    <style>
      /* Scroll to Top Button */
      #scrollToTopBtn {
        display: none;
        position: fixed;
        bottom: 100px;
        right: 25px;
        z-index: 1000;
        background-color: #007bff;
        color: white;
        border: none;
        padding: 12px 16px;
        border-radius: 50%;
        font-size: 18px;
        cursor: pointer;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
      }

      #scrollToTopBtn:hover {
        background-color: #0056b3;
      }

      /* WhatsApp Button */
      .wa-float {
        position: fixed;
        bottom: 30px;
        right: 25px;
        background-color: #25d366;
        color: white;
        border-radius: 50%;
        padding: 16px;
        z-index: 1000;
        text-align: center;
        font-size: 1px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
      }

      .wa-float:hover {
        transform: scale(1.1);
      }

      .wa-float img {
        width: 28px;
        height: 28px;
      }

      /* Container Mobil */
      .mobils-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
      }

      .mobil-item {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        height: 100%;
        transition: transform 0.3s ease;
      }

      .mobil-item:hover {
        transform: translateY(-5px);
      }

      .mobil-item img {
        width: 100%;
        height: 180px;
        object-fit: cover;
      }

      .mobil-item h3 {
        font-size: 1.1rem;
        margin: 10px;
        color: var(--secondary-color, #333);
      }

      .mobil-item p {
        flex-grow: 1;
        margin: 0 10px 10px;
        font-size: 0.95rem;
        color: #666;
      }

      .mobil-item button {
        margin: 10px;
        padding: 10px;
        background-color: var(--secondary-color, #007bff);
        border: none;
        color: white;
        cursor: pointer;
        border-radius: 6px;
        transition: background-color 0.3s;
      }

      .mobil-item button:hover {
        background-color: #0056b3;
      }

      h1 {
        text-align: center;
        margin-top: 30px;
        color: var(--secondary-color, #007bff);
      }

      .search-form {
        max-width: 600px;
        margin: 20px auto;
        text-align: center;
      }

      .search-form input[type="text"] {
        width: 70%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        margin-right: 10px;
      }

      .search-form button {
        padding: 10px 20px;
        background-color: var(--secondary-color, #007bff);
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
      }

      .search-form button:hover {
        background-color: #0056b3;
      }

      #brand-list {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        justify-content: center;
        max-width: 800px;
        margin: 0 auto 40px auto;
      }

      .brand-btn {
        padding: 10px 25px;
        border-radius: 8px;
        border: 2px solid #007bff;
        background: white;
        cursor: pointer;
        color: #007bff;
        font-weight: 600;
        font-size: 1rem;
        transition: background-color 0.3s, color 0.3s;
      }

      .brand-btn:hover {
        background-color: #007bff;
        color: white;
      }

      #back-to-brands {
        display: inline-block;
        margin: 10px auto 30px auto;
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border-radius: 8px;
        cursor: pointer;
        border: none;
        font-weight: 600;
        transition: background-color 0.3s ease;
      }

      #back-to-brands:hover {
        background-color: #0056b3;
      }
    </style>
  </head>

  <body>
    <!-- Navbar -->
    <%- include("partials/navbar") %>

    <!-- Hero Section -->
    <%- include("partials/hero") %>

    <!-- Ads Above -->
    <%- include("partials/ads") %>

    <!-- Judul -->
    <h1>Daftar Mobil</h1>

    <!-- Form Pencarian -->
    <div class="search-form" id="search-form">
      <form action="/search" method="GET">
        <input
          type="text"
          name="q"
          id="search-input"
          placeholder="Cari mobil..."
          value="<%= typeof query !== 'undefined' ? query : '' %>"
        />
        <button type="submit">Cari</button>
      </form>
    </div>

    <!-- Pilihan Brand -->
    <div id="brands-container">
      <h2
        style="
          text-align: center;
          color: var(--secondary-color, #007bff);
          margin-bottom: 20px;
        "
      >
        Pilih Brand Mobil
      </h2>
      <div id="brand-list">
        <% const brandUnik = [...new Set(mobilList.map(m => m.brand))];
        brandUnik.forEach(brand => { %>
        <button class="brand-btn"><%= brand %></button>
        <% }) %>
      </div>
    </div>

    <!-- Daftar Mobil Merek Terpilih -->
    <div
      id="mobils-list-container"
      style="
        display: none;
        max-width: 1200px;
        margin: 0 auto 50px;
        text-align: center;
      "
    >
      <h2
        style="
          color: var(--secondary-color, #007bff);
          margin-bottom: 20px;
          text-align: center;
        "
      >
        Daftar Mobil Brand: <span id="selected-brand-name"></span>
      </h2>

      <button id="back-to-brands">Kembali ke Daftar Brand</button>

      <div class="mobils-container" id="mobils-list"></div>
    </div>

    <!-- Scroll ke Atas -->
    <button id="scrollToTopBtn" title="Kembali ke atas">â†‘</button>

    <!-- WhatsApp -->
    <a
      href="https://wa.me/6281234567890"
      class="wa-float"
      target="_blank"
      title="Hubungi via WhatsApp"
    >
      <img
        src="https://img.icons8.com/ios-filled/30/ffffff/whatsapp.png"
        alt="WhatsApp"
      />
    </a>

    <!-- Ads Bawah -->
    <%- include("partials/ads") %>

    <!-- Footer -->
    <%- include("partials/footer") %>

    <!-- Script Scroll to Top -->
    <script>
      const scrollToTopBtn = document.getElementById("scrollToTopBtn");

      window.addEventListener("scroll", () => {
        scrollToTopBtn.style.display = window.scrollY > 300 ? "block" : "none";
      });

      scrollToTopBtn.addEventListener("click", () => {
        // window.scrollTo({ top: 0, behavior: "smooth" });
      });
    </script>

    <!-- Script Filter Brand Mobil -->
    <script>
      const mobilListData = <%- JSON.stringify(mobilList) %>;

      const brandButtons = document.querySelectorAll('.brand-btn');
      const brandsContainer = document.getElementById('brands-container');
      const mobilsListContainer = document.getElementById('mobils-list-container');
      const mobilsListDiv = document.getElementById('mobils-list');
      const selectedBrandName = document.getElementById('selected-brand-name');
      const backToBrandsBtn = document.getElementById('back-to-brands');

      brandButtons.forEach(btn => {
        btn.addEventListener('click', () => {
          const brand = btn.textContent.trim();

          selectedBrandName.textContent = brand;

          const filteredMobils = mobilListData.filter(mobil => mobil.brand === brand);

          let html = '';
          filteredMobils.forEach((mobil, idx) => {
            html += `
              <div class="mobil-item" id="mobil-item-${idx}">
                <a href="/mobil/${mobil.id}">
                  <img src="${mobil.gambar_url}" alt="${mobil.nama}" />
                  <h3>${mobil.nama}</h3>
                </a>
                <p>${mobil.spesifikasi}</p>
                <a href="/mobil/${mobil.id}">
                  <button>Lihat Detail</button>
                </a>
              </div>
            `;
          });

          mobilsListDiv.innerHTML = html;

          mobilsListContainer.style.display = 'block';
          brandsContainer.style.display = 'none';

          // window.scrollTo({ top: 0, behavior: 'smooth' });
        });
      });

      backToBrandsBtn.addEventListener('click', () => {
        mobilsListContainer.style.display = 'none';
        brandsContainer.style.display = 'block';

        // window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    </script>
  </body>
</html>
